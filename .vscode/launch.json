                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=codecrafters-sqlite"
                ],
                "filter": {
                    "name": "codecrafters_sqlite",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'codecrafters-sqlite'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=codecrafters-sqlite",
                    "--package=codecrafters-sqlite",

                ],
                "filter": {
                    "name": "codecrafters-sqlite",
                    "kind": "bin"
                }
            },
            "args": [
                "sample.db",
                "select count(*) from apples"
            ],
            "cwd": "${workspaceFolder}"
        },
